<!doctype html>
<html lang="en">
    <head>
    <meta charset="UTF-8">
    <meta name="viewport"
content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>Recipes</title>
</head>
<body>
<main>
    <h1>Recipes</h1>

    <a href="/recipes/new">Add Recipe</a>

    <ul>
        <% for (let recipe of recipes) { %>
            <li>
                <a href="recipes/<%= recipe._id %>"><%= recipe.title %></a>
            </li>
        <% } %>
    </ul>
</main>
</body>
</html>